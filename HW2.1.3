using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace HW2._1._3
{
    class Program
    {
        static void Main(string[] args)
        {
            char[] array;
            string strin, strout;
            Console.WriteLine("Enter yor string: ");
            strin = Console.ReadLine();
            array = strin.ToCharArray(0, strin.Length);
            for (int i = 0; i < array.Length; i++)
            {
                int symbol = (int)array[i];
                if (symbol >= 65 && symbol <= 90)
                    symbol += 32;
                else if (symbol >= 97 && symbol <= 122)
                    symbol -= 32;
                array[i] = (char)symbol;
            }
            strout = string.Join("", array);
            Console.WriteLine("Converted string: " + strout);
        }
    }
}
