            if (isInt && temp.Length == length)
            {
                int half1 = number / 1000;
                int half2 = number % 1000;
                int digit1 = half1 / 100;
                int digit2 = (half1 / 10) % 10;
                int digit3 = half1 % 10;
                int sumHalf1 = digit1 + digit2 + digit3;
                int digit4 = half2 / 100;
                int digit5 = (half2 / 10) % 10;
                int digit6 = half2 % 10;
                int sumHalf2 = digit4 + digit5 + digit6;
                if (sumHalf1 == sumHalf2)
                    Console.WriteLine("Your ticket is lucky!");
                else
                    Console.WriteLine("Loser!");
            }
            else
            {
                Console.WriteLine("This number does not match the type of tram ticket!");
            }
        }
    }
